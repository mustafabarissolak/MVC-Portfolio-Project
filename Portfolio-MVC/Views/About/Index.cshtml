@model List<About>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr style="text-align:center">
                                    <th scope="col">Id</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Description</td>
                                        <td><a href="/About/Edit/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/About/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-action="Create" class="btn btn-primary">Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

