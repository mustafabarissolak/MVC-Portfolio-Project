@model Contact

@{
    ViewData["Title"] = "Mesaj Detay";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" asp-for="Id" />

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detayları</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Gönderen: <b>@Model.Name</b>
                            <br />
                            Email: <b>@Model.Email</b>
                            <br />
                            Tarih: <b>@Model.SendDate</b>
                            <br /><br />
                            Mesaj: <b>@Model.Message</b>
                        </div>
                    </div>
                </div>
                <!-- Geri Butonu -->
                <button class="btn btn-secondary mt-3" onclick="window.history.back()">Geri Dön</button>
            </div>
        </div>
    </div>
</div>

