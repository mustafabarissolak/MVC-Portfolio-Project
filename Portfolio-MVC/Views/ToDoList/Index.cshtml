@model List<ToDoList>

@{
    ViewData["Title"] = "Yapılacakler";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacaklar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar ile ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">İçerik</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>

                                        @if (item.Status == true)
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.Id" class="btn btn-dark">Yapılmadı Olarak İşaretle</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.Id" class="btn btn-info">Yapıldı OLarak İşaretle</a></td>
                                        }

                                        <td><a href="/ToDoList/Update/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/ToDoList/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-action="Create" class="btn btn-primary">Yeni Yapılacak İş Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

